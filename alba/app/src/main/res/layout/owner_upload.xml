<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="24dp"
        android:letterSpacing="0.02"
        android:text="채용공고 올리기"
        android:textFontWeight="400"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_line"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="14dp"
        android:background="#F3F1F1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title2" />

    <EditText
        android:id="@+id/upload_title"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:background="@drawable/black"
        android:gravity="center_vertical"
        android:hint="제목(00알바 구합니다)"
        android:text=""
        android:textSize="16dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="90dp" />

    <EditText
        android:id="@+id/period"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:background="@drawable/black"
        android:gravity="center_vertical"
        android:hint="근무기간"
        android:text=""
        android:textSize="16dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="160dp" />

    <EditText
        android:id="@+id/salary"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:background="@drawable/black"
        android:gravity="center_vertical"
        android:hint="시급"
        android:text=""
        android:textSize="16dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="230dp" />

    <EditText
        android:id="@+id/age"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:background="@drawable/black"
        android:gravity="center_vertical"
        android:hint="나이"
        android:text=""
        android:textSize="16dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="300dp" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:background="@drawable/black"
        android:gravity="center_vertical"
        android:text="성별"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="370dp" />

    <Button
        android:id="@+id/btn_gender"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/icon_angle_down"
        tools:layout_editor_absoluteX="340dp"
        tools:layout_editor_absoluteY="385dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_country"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/icon_angle_down"
        tools:layout_editor_absoluteX="340dp"
        tools:layout_editor_absoluteY="455dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/country"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:background="@drawable/black"
        android:gravity="center_vertical"
        android:text="국적"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="440dp" />

    <EditText
        android:id="@+id/detail"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:background="@drawable/black"
        android:gravity="center_vertical"
        android:hint="추가하고 싶은 내용"
        android:text=""
        android:textSize="16dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="510dp" />

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:background="#FFEDA4"
        android:backgroundTint="#FFEDA4"
        android:text="공고 업로드"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="580dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>