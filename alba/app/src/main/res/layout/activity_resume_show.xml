<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user.ResumeShowActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/resumeShowToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="10sp">


        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon_user_profile_24" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*"
            android:layout_margin="10dp">

            <TableRow>

                <TextView
                    android:id="@+id/resume_show_text1"
                    android:layout_height="match_parent"
                    android:text="text1"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/resume_show_text2"
                    android:text="text2"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/resume_show_text3"
                    android:text="text3"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/resume_show_text4"
                    android:text="text4"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="text5"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이력서 제목"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/resume_show_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_button_grey"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:scrollbars="vertical"
            android:maxHeight="80dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="경력"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/resume_show_career"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_button_grey"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:scrollbars="vertical"
            android:maxHeight="120dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="자기소개서"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/resume_show_introduce"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_button_grey"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:scrollbars="vertical"
            android:maxHeight="300dp"/>

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:stretchColumns="*">

        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="수정하기"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="@drawable/edit_button"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="삭제하기"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="@drawable/delete_button"/>
        </TableRow>
    </TableLayout>

</LinearLayout>