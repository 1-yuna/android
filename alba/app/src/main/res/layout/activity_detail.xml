<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        android:layout_gravity="center"
        android:background="@color/white">


        <!-- 타이틀바 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Title"
                android:text="CU 정왕점"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp" />


        </LinearLayout>
        <!-- //end 타이틀바 -->

        <!-- Notice -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:padding="24dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/Addtext"
                    android:text="CU 정왕점에서 주말 오후 알바생을 구합니다."
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:alpha="0.87"
                    android:gravity="left"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="상세 정보"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/home_yellow_border">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="left">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="근무기간 :"
                        android:textSize="15dp"
                        android:textColor="#615F5F"
                        android:gravity="left"
                        android:layout_gravity="left"/>

                    <TextView
                        android:id="@+id/Term"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="term"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:layout_gravity="left"/>

                </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="left">

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="시       급 :"
                            android:textSize="15dp"
                            android:textColor="#615F5F"
                            android:layout_gravity="left"/>

                        <TextView
                            android:id="@+id/Money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="시급"
                            android:textSize="15dp"
                            android:textColor="#000000" />

                    </LinearLayout>

                    <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="left">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="근무요일 :"
                        android:textSize="15dp"
                        android:textColor="#615F5F"
                        android:layout_gravity="left"/>

                    <TextView
                        android:id="@+id/WorkDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WorkDay"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:gravity="left"/>

                </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="left">

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="근무시간 :"
                            android:textSize="15dp"
                            android:textColor="#615F5F"
                            android:layout_gravity="left"/>

                        <TextView
                            android:id="@+id/WorkTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WorkTime"
                            android:textSize="15dp"
                            android:textColor="#000000"
                            android:gravity="left" />


                    </LinearLayout>

                    <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="left">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="학       력 :"
                        android:textSize="15dp"
                        android:textColor="#615F5F"
                        android:layout_gravity="left"/>

                    <TextView
                        android:id="@+id/Education"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Education"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:gravity="left"/>

                </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="left">

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="우대조건 :"
                            android:textSize="15dp"
                            android:textColor="#615F5F"
                            android:layout_gravity="left"/>

                        <TextView
                            android:id="@+id/Preference"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preference"
                            android:textSize="15dp"
                            android:textColor="#000000"
                            android:gravity="left" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="left">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="성       별 :"
                        android:textSize="15dp"
                        android:textColor="#615F5F"
                        android:layout_gravity="left"/>

                    <TextView
                        android:id="@+id/Sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_gravity="bottom"
                        android:text="sex"
                        android:textSize="15dp"
                        android:textColor="#000000"/>

                </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="left">

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="국       적 :"
                            android:textSize="15dp"
                            android:textColor="#615F5F"
                            android:layout_gravity="left"/>

                        <TextView
                            android:id="@+id/Nation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_gravity="bottom"
                            android:text="nation"
                            android:textSize="15dp"
                            android:textColor="#000000"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="15dp"
                        android:gravity="left">

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="나       이 :"
                            android:textSize="15dp"
                            android:textColor="#615F5F"
                            android:layout_gravity="left"/>

                        <TextView
                            android:id="@+id/Age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_gravity="bottom"
                            android:text="age"
                            android:textSize="15dp"
                            android:textColor="#000000"/>

                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="상세 설명"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/home_yellow_border">

                <TextView
                    android:id="@+id/Extratext"
                    android:text="Extratext"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:alpha="0.87"
                    android:gravity="left"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                </LinearLayout>
                <!-- Notice -->


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="채용자 정보"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:background="@drawable/home_yellow_border">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="담  당  자 :"
                            android:textSize="15dp"
                            android:textColor="#615F5F"
                            android:gravity="left"
                            android:layout_gravity="left"/>

                        <TextView
                            android:id="@+id/OwnerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="OwnerName"
                            android:textSize="15dp"
                            android:textColor="#000000"
                            android:gravity="left"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="전화번호 :"
                            android:textSize="15dp"
                            android:textColor="#615F5F"
                            android:gravity="left"
                            android:layout_gravity="left"/>


                        <TextView
                            android:id="@+id/OwnerPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="OwnerPhone"
                            android:textSize="15dp"
                            android:textColor="#000000"
                            android:gravity="left" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">
            <Button
                android:id="@+id/checkbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="#FFE085"
                android:onClick="mOnClose"
                android:text="닫기"
                android:textColor="@color/white"
                android:textSize="15dp"/>

<!--
            <Button
                android:id="@+id/applybtn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="#FFE085"
                android:layout_gravity="bottom"
                android:text="지원하기"
                android:textSize="14dp"
                android:textColor="@color/white"/>-->
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>