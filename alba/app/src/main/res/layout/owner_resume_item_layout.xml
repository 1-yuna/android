<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#F3F1F1"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    app:layout_constrainedHeight="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="store_name"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000000"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/resume_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="resume_title"
                android:textSize="16dp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="owner"
                android:textSize="16dp"
                android:textColor="#000000"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/job_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="job_id"
                android:textSize="16dp"
                android:textColor="#000000"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/applicant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="applicant"
                android:textSize="16dp"
                android:textColor="#000000"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/resume_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="resume_id"
                android:textSize="16dp"
                android:textColor="#000000"
                android:visibility="gone"/>

            <View
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="0dp" />

          </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/detail_resume"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_button_light_yellow"
            android:layout_gravity="right"
            android:text="상세 보기"
            android:textSize="14dp"
            android:textColor="#000000"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>