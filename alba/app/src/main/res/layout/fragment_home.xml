<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="채용공고"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/home_underbar"
                android:textColor="#000000"
                android:textSize="25dp"
                android:padding="20dp"
                />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:layout_weight="25">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"

                    android:padding="20dp"
                    android:orientation="horizontal"
                    android:background="@drawable/home_yellow_border">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_weight="3"
                            android:src="@drawable/home_ediya" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width ="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="시흥 정왕점 이디야에서 알바생을 모집합니다. "
                                android:textSize = "18dp"
                                android:textColor ="#034DA2"
                                android:textStyle="bold"
                                android:padding="10dp"

                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width ="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="월.수.금 마감"
                                    android:textSize = "15dp"
                                    android:textColor ="#000000"
                                    />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:orientation="horizontal">

                                    <Button
                                        android:layout_width="100dp"
                                        android:layout_height="30dp"
                                        android:text="지원하기"
                                        android:textSize="15dp"
                                        android:background="@drawable/round_button_yellow"
                                        />
                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/job_list"
                    android:layout_width="match_parent"
                    android:layout_height="460dp" />


            </LinearLayout>



        </ScrollView>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>